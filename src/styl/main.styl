$green = #0eb193

body
    font-family 'Lato', sans-serif

.header
    background-image linear-gradient(rgba(65, 80, 119, 0.78), rgba(65, 80, 119, 0.78)), url("../images/header.jpg")
    background-size cover
    background-position center center
    border-radius 0rem
    height 100%
    & h1
        color white
        font-size 36px
        font-weight 400
        text-transform uppercase
    & p
        color $green
        font-weight 400
        line-height 1.2

.logo
    height 76px
    width auto

.form-container
    background-color $green

.form-control
    background-color transparent
    border-radius 0rem
    border 2px solid white
    color white
    width 100%

.form-control:focus
    color white
    background-color transparent
    border 2px solid white
    box-shadow none

.form-control::placeholder
    color white

.btn
    border-radius 0rem

.btn-header
    color $green
    background-color white
    border-color white
    border-radius 2px