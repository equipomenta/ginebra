@import 'stylesheet.css'

$green = #0eb193
$purple = #415077
$yellow = #e2b723

body
    font-family 'Lato', sans-serif

.header
    background-image linear-gradient(rgba(14, 177, 147, 0.77), rgba(14, 177, 147, 0.77)), url("../images/header.jpg")
    background-size cover
    background-position center center
    border-radius 0rem
    height 100%
    padding-bottom 1rem
    & h1
        color white
        font-family 'byombold'
        font-size 40px
        text-transform uppercase
        & .life
            font-family 'byomregular'
    & p
        color white
        font-family 'byomregular'
        font-size 24px
        line-height 1.2
    & .info
        font-family 'byombold'
        font-size 15px
    & .flecha
        position absolute
        margin -22px 295px
        width 70px

.logo
    height 100px
    width auto

.header-icons
    & a
        color white
        font-family 'byombold'
    & a:hover
        color white
        text-decoration underline
    & a:focus
        color white
    & a:active
        color white
    & i
        color white
    & .telf
        color white
        font-family 'Lato', sans-serif
        &:hover
            text-decoration none
.icon-box-header-f,
.icon-box-header-w
    border solid 1px white
    padding 5px
    &:hover
        text-decoration none

.__link-icon:hover
    text-decoration none !important

//Oferta
.__Oferta
    line-height 3.3rem

.__DesdeTexto
.__Porcentaje
.__InicialTexto
.__InicialPrecio
    color white

.__DesdeTexto
    font-size .8rem
    font-weight bold
    text-transform uppercase

.__Porcentaje
    font-size 6rem
    font-weight bold

.__InicialTexto
    font-size 2.2rem
    font-weght bold
    text-transform uppercase

.__InicialPrecio
    font-size 1.7rem
    font-weight bold

.__InicialPrecioBG
    background-color $yellow
    border-radius 4px
    padding 1px

//Form
.form-container
    background-color $yellow

.form-control
    background-color transparent
    border-radius 0rem
    border 2px solid white
    color white
    font-family 'trackregular'
    font-size 0.9em
    padding 1.4rem .75rem
    width 100%

.form-control:focus
    color white
    background-color transparent
    border 2px solid white
    box-shadow none

.form-control::placeholder
    color white

.btn
    border-radius 0rem
    padding 0.75rem .75rem

.btn-header
    color $yellow
    background-color white
    border-color white
    border-radius 4px
    font-family 'byombold'
    &:hover
        color $yellow

.content
    & h1
        color $green
        font-family 'byomregular'
        font-size 30.24px
    & .border-img-edificio
        border solid 8px $green
        padding-right 0px
        padding-left 0px
    & .icon-exclusivo-1
        height 60px
        float left
        width auto
    & .icon-exclusivo-2
        height 40px
        float left
        width auto
    & .img-edificio
        height auto
        width 100%
    & .exclusivo-bg-color
        background-color $green
        color white
        line-height 1.2
